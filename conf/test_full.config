/*
========================================================================================
    Nextflow config file for running full-size tests
========================================================================================
    Defines input files and everything required to run a full size pipeline test.

    Use as follows:
        nextflow run nf-core/hicar -profile test_full,<docker/singularity>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Full test profile'
    config_profile_description = 'Full test dataset to check pipeline function'

    // Input data for full size test
    input = "${projectDir}/assets/test_full_samplesheet.csv"

    // Output folder
    outdir = 'full_test_results'

    // peak calculating
    maps_cutoff_counts = 6
    maps_cutoff_fold_change = 2
    maps_cutoff_fdr = 2
    qval_thresh = 0.05

    // Genome references
    genome = 'GRCh38'
    ucscname = 'hg38'

    // cluster Type
    snow_type = "FORK"

    // resources
    juicer_jvm_params          = '-Xms2g -Xmx32g'
}
